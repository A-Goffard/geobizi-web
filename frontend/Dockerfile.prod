# Etapa de build
FROM node:20-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa de producci√≥n
FROM nginx:alpine AS final
COPY --from=builder /app/dist /usr/share/nginx/html
COPY ./nginx/geobizi.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
